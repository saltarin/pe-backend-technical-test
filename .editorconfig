root = true

[*]
end_of_line = lf
insert_final_newline = false
charset = utf-8

[*.{js,spec.js}]
indent_style = space
indent_size = 2

[*.{ts,tsx,spec.ts,spec.tsx}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2
